<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Survey Description -->
    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Survey Description:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <!-- Description Input Field -->
    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDescription"
        android:layout_marginTop="8dp"
        android:hint="Type your description here"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Question: Intensity of Training -->
    <TextView
        android:id="@+id/textViewIntensityQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What was the intensity of training? (Scale: 1-10)"
        android:textSize="18sp"
        android:layout_below="@id/editTextDescription"
        android:layout_marginTop="16dp"/>

    <!-- Intensity Answer Input Field -->
    <EditText
        android:id="@+id/editTextIntensity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewIntensityQuestion"
        android:layout_marginTop="8dp"
        android:hint="Enter a number between 1 and 10"
        android:inputType="number"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</RelativeLayout>
